{
	"extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
	"include": [
		// Renderer specific
		"src/renderer/src/**/*",
		"src/renderer/src/env.d.ts",
		"src/renderer/src/**/*.tsx",

		// Preload specific
		"src/preload/**/*.ts",
		"src/preload/*.d.ts",

		// Main process
		"src/main/**/*.ts",

		// Config files
		"vite.config.ts"
	],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"skipLibCheck": true,
		"module": "ESNext",
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@renderer/*": ["src/renderer/src/*"]
		}
	}
}
